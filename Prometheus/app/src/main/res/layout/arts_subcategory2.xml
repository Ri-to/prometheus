<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".sub_art2">

    <ImageView
        android:id="@+id/img2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/photo_category" />

    <ScrollView
        android:id="@+id/sv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img2"
        android:orientation="vertical"
        android:scrollbars="none">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img2"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtspace1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                tools:ignore="MissingConstraints" />
            <android.support.v7.widget.CardView
                android:id="@+id/historical"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#fcfffe"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/txtspace1"
                tools:ignore="MissingConstraints">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraint2"
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                        android:id="@+id/subimg1"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/historical1"
                        app:siShape="@drawable/ggwp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundedbackground"
                        android:gravity="right"
                        android:text="Historical "
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/subimg1"
                        app:layout_constraintRight_toRightOf="@id/subimg1" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/landscape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#fcfffe"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/txtspace1"
                app:layout_constraintLeft_toRightOf="@+id/historical"
                tools:ignore="MissingConstraints">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraint3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                        android:id="@+id/subimg2"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/landscape"
                        app:siShape="@drawable/ggwp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundedbackground"
                        android:gravity="right"
                        android:text="Landscape "
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/subimg2"
                        app:layout_constraintRight_toRightOf="@id/subimg2" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/photojournalist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="4dp"
                app:cardBackgroundColor="#fcfffe"
                app:cardCornerRadius="10dp"
                app:layout_constraintRight_toLeftOf="@id/portrait"
                app:layout_constraintTop_toBottomOf="@id/historical">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraint4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                        android:id="@+id/subimg3"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/photojournal1"
                        app:siShape="@drawable/ggwp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundedbackground"
                        android:gravity="right"
                        android:text="PhotoJournalist "
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/subimg3"
                        app:layout_constraintRight_toRightOf="@id/subimg3" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/portrait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#fcfffe"
                app:cardCornerRadius="10dp"
                app:layout_constraintRight_toLeftOf="@id/photojournalist"
                app:layout_constraintTop_toBottomOf="@id/landscape"
                tools:ignore="MissingConstraints">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraint5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                        android:id="@+id/subimg4"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/portrait"
                        app:siShape="@drawable/ggwp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundedbackground"
                        android:gravity="right"
                        android:text="Portrait "
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/subimg4"
                        app:layout_constraintRight_toRightOf="@id/subimg4" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/religious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#fcfffe"
                app:cardCornerRadius="10dp"
                app:layout_constraintRight_toLeftOf="@id/wildlife"
                app:layout_constraintTop_toBottomOf="@id/photojournalist">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraint6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                        android:id="@+id/subimg5"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/religious"
                        app:siShape="@drawable/ggwp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundedbackground"
                        android:gravity="right"
                        android:text="Religious "
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/subimg5"
                        app:layout_constraintRight_toRightOf="@id/subimg5" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/wildlife"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#fcfffe"
                app:cardCornerRadius="10dp"
                app:layout_constraintLeft_toRightOf="@id/religious"
                app:layout_constraintTop_toBottomOf="@id/portrait"
                tools:ignore="MissingConstraints">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraint7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                        android:id="@+id/subimg6"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wildlife"
                        app:siShape="@drawable/ggwp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundedbackground"
                        android:gravity="right"
                        android:text="WildLife "
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/subimg6"
                        app:layout_constraintRight_toRightOf="@id/subimg6" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</RelativeLayout>
